<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 -0.05" rpy="0 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find ${description_package})/meshes/limo_base.dae"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.075 0 0.045"/>
            <geometry>
                <box size="0.15 0.13 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="5.5" x="0.2" y="0.13" z="0.1">
            <origin xyz="0.1 0 0.045" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- FRONT LEFT WHEEL -->
    <joint name="front_left_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_left_steering"/>
        <origin xyz="0.1 0.07 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="1.5" effort="10.0" velocity="3.0"/>
    </joint>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="front_left_steering"/>
        <child link="front_left_wheel"/>
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_steering">
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <link name="front_left_wheel">
        <visual>
            <origin xyz="0 0 -0.005" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="file://$(find ${description_package})/meshes/limo_wheel.dae"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT RIGHT WHEEL -->
    <joint name="front_right_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_right_steering"/>
        <origin xyz="0.1 -0.07 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="1.5" effort="10.0" velocity="3.0"/>
    </joint>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="front_right_steering"/>
        <child link="front_right_wheel"/>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_steering">
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <link name="front_right_wheel">
        <visual>
            <origin xyz="0 0 -0.005" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="file://$(find ${description_package})/meshes/limo_wheel.dae"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- REAR LEFT WHEEL -->
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.1 0.07 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <origin xyz="0 0 -0.005" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="file://$(find ${description_package})/meshes/limo_wheel.dae"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- REAR RIGHT WHEEL -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.1 -0.07 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <origin xyz="0 0 -0.005" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="file://$(find ${description_package})/meshes/limo_wheel.dae"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>
